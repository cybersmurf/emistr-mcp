{
  "database": {
    "host": "localhost",
    "port": 3306,
    "database": "sud_utf8_aaa",
    "user": "emistr_user",
    "password": "your_password_here"
  },
  "anonymization": {
    "enabled": true,
    "preserve_ids": true,
    "cache_size": 1000
  },
  "logging": {
    "level": "INFO",
    "file": "emistr_mcp.log",
    "max_bytes": 10485760,
    "backup_count": 5
  },
  "limits": {
    "max_query_results": 1000,
    "default_page_size": 50,
    "query_timeout": 30
  },
  "security": {
    "allowed_operations": [
      "SELECT"
    ],
    "rate_limit_per_minute": 60
  }
}
